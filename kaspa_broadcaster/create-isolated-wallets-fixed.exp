# Function to create one wallet
proc create_wallet {company_name} {
    global kaspa_cli
    
    puts "ğŸ¢ Creating wallet for: $company_name"
    
    spawn $kaspa_cli
    expect "$ "
    
    send "wallet create --testnet-10\r"
    
    # Handle account title prompt
    expect {
        "Default account title:" {
            send "$company_name\r"
            puts "   ğŸ“ Account title: $company_name"
        }
        timeout {
            puts "   âŒ Failed: no account title prompt"
            send "exit\r"
            expect eof
            return ""
        }
    }
    
    # Look for mnemonic
    expect {
        -re "Mnemonic.*: (.+)" {
            set mnemonic [string trim $expect_out(1,string)]
            puts "   ğŸ”‘ Mnemonic captured"
        }
        -re "mnemonic.*: (.+)" {
            set mnemonic [string trim $expect_out(1,string)]
            puts "   ğŸ”‘ Mnemonic captured"
        }
        -re "phrase.*: (.+)" {
            set mnemonic [string trim $expect_out(1,string)]
            puts "   ğŸ”‘ Mnemonic captured"
        }
        timeout {
            puts "   âŒ Failed to capture mnemonic"
            send "exit\r"
            expect eof
            return ""
        }
    }
    
    # Handle phishing hint
    expect {
        "Create phishing hint" {
            send "\r"
        }
        "phishing" {
            send "\r"
        }
        "hint" {
            send "\r"
        }
        timeout {
            puts "   âš ï¸  No phishing hint prompt"
        }
    }
    
    expect "$ "
    
    # Get wallet address
    send "wallet address --testnet-10\r"
    expect {
        -re "(kaspatest:\[a-z0-9\]+)" {
            set address $expect_out(1,string)
            puts "   ğŸ“ Address: $address"
        }
        timeout {
            puts "   âŒ Failed to get address"
            send "exit\r"
            expect eof
            return ""
        }
    }
    
    expect "$ "
    send "exit\r"
    expect eof
    
    puts "   âœ… SUCCESS: $company_name wallet created"
    puts "   ğŸŒ Explorer: https://explorer-tn10.kaspa.org/addresses/$address"
    puts ""
    
    return "$company_name|$address|$mnemonic"
}

