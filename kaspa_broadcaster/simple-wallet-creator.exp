#!/usr/bin/expect -f

set timeout 30
set kaspa_cli "../rusty-kaspa/target/release/kaspa-cli"

log_user 1

puts "ğŸ”’ SIMPLE WALLET CREATOR"
puts "======================="
puts "Creating isolated company wallets with test account titles"
puts ""

set companies {
    "test-company-1"
    "test-company-2" 
    "test-company-3"
    "test-company-4"
}

set wallet_results ""

foreach company $companies {
    puts "ğŸ¢ Creating wallet: $company"
    
    spawn $kaspa_cli
    expect "$ "
    
    send "wallet create --testnet-10\r"
    
    # Wait for and handle account title prompt
    expect {
        "Default account title:" {
            puts "   ğŸ“ Entering account title: $company"
            send "$company\r"
        }
        timeout {
            puts "   âŒ No account title prompt - skipping"
            send "exit\r"
            expect eof
            continue
        }
    }
    
    # Capture the mnemonic phrase
    set mnemonic ""
    expect {
        -re "Mnemonic phrase: (.+)" {
            set mnemonic [string trim $expect_out(1,string)]
            puts "   ğŸ”‘ Mnemonic captured (${[string length $mnemonic]} chars)"
        }
        -re "Your recovery phrase: (.+)" {
            set mnemonic [string trim $expect_out(1,string)]
            puts "   ğŸ”‘ Recovery phrase captured (${[string length $mnemonic]} chars)"
        }
        timeout {
            puts "   âŒ Failed to capture mnemonic"
            send "exit\r"
            expect eof
            continue
        }
    }
    
    # Handle phishing hint
    expect {
        "Create phishing hint" {
            puts "   ğŸ›¡ï¸  Skipping phishing hint"
            send "\r"
        }
        "$ " {
            puts "   âœ… At prompt"
        }
        timeout {
            puts "   âš ï¸  Timeout after mnemonic"
        }
    }
    
    expect "$ "
    
    # Get wallet address
    send "wallet address --testnet-10\r"
    
    set address ""
    expect {
        -re "(kaspatest:\[a-z0-9\]+)" {
            set address $expect_out(1,string)
            puts "   ğŸ“ Address: $address"
        }
        timeout {
            puts "   âŒ Failed to get address"
        }
    }
    
    expect "$ "
    send "exit\r"
    expect eof
    
    if {$address != "" && $mnemonic != ""} {
        append wallet_results "$company|$address|$mnemonic\n"
        puts "   âœ… SUCCESS: $company wallet created"
        puts "   ğŸŒ https://explorer-tn10.kaspa.org/addresses/$address"
    } else {
        puts "   âŒ FAILED: $company wallet creation failed"
    }
    
    puts ""
    sleep 1
}

# Save results
puts "ğŸ’¾ Saving wallet data..."
set fp [open "simple_company_wallets.txt" w]
puts $fp "SIMPLE COMPANY WALLETS"
puts $fp "======================"
puts $fp "Master: kaspatest:qpxm5tpyg8p6z7f6hy9mtlwz2es03cqtavaldsctcdltmnz6yfz6gvurgpmem"
puts $fp "Master Mnemonic: arrest acid fall interest comfort expire aunt combine actor tackle stove coral"
puts $fp ""
puts $fp "Company Wallets (Format: CompanyID|Address|UniqueMnemonic):"
puts $fp $wallet_results
close $fp

puts "ğŸ’¾ Results saved to: simple_company_wallets.txt"
puts ""
puts "ğŸ¯ READY TO TEST TRANSACTIONS!" 