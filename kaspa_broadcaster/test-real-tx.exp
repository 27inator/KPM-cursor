set master_address "kaspatest:qrzv8r278e8gsv9kp45ay8dckxdvwssadk2jaaafm929hedzm93h7jcg9k77w"
set company_address "kaspatest:qzc74mqe8s04ctn8pvkgxdnn0u3t7nnrvzmelmca7557p6mlswusczgw4wtca"
