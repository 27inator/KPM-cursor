#!/usr/bin/expect -f

set timeout 30
set kaspa_cli "../rusty-kaspa/target/release/kaspa-cli"

log_user 1

puts "ğŸ”— TESTING NODE CONNECTION"
puts "========================="

spawn $kaspa_cli
expect "$ "

puts "Setting server..."
send "server 127.0.0.1:16220\r"
expect "$ "

puts "Connecting..."
send "connect\r"

expect {
    "Connected to" {
        puts "âœ… SUCCESS: Connected to kaspad!"
        set success 1
    }
    "Error" {
        puts "âŒ Connection failed"
        set success 0
    }
    "WebSocket" {
        puts "âŒ WebSocket error - node not ready"
        set success 0
    }
    timeout {
        puts "âŒ Connection timeout"
        set success 0
    }
}

expect "$ "
send "exit\r"
expect eof

if {$success == 1} {
    puts ""
    puts "ğŸ‰ NODE IS READY FOR TRANSACTIONS!"
} else {
    puts ""
    puts "âŒ Node connection failed"
    exit 1
} 